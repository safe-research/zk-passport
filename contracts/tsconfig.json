{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./tasks/**/*",
    "./typechain-types/**/*",
    "hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
